{
    "functions": {
        "app/api/**/*.js": {
            "maxDuration": 10,
            "runtime": "nodejs20.x",
            "memory": 1024
        }
    },
    "regions": [
        "bom1"
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-store, must-revalidate"
                }
            ]
        }
    ]
}